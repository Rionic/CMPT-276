<h1 align="center">Sign Up</h1>
<%= render 'shared/errors', obj: @user %>
<div align="center">
  <div>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :email, 'SFU E-mail' %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Please enter your SFU e-mail", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :firstname, "First Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :firstname, class: "form-control", placeholder: "Please enter your first name", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :lastname, "Last Name" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :lastname, class: "form-control", placeholder: "Please enter your lastname", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-form-label col-sm-2">
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm" %>
        </div>
      </div>
      <div class="form-group row">
      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to home", root_path %> ]
    </div>
  </div>
</div>
